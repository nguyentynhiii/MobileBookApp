<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cutomer" />

                    <TextView
                        android:id="@+id/tv_ten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Nhi -Quế"
                        android:textColor="#11009E"
                        android:textSize="25dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_Edit"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#78C1F3"
                    android:text="EDIT"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/a1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Chờ xác nhận"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/a2" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Chờ lấy hàng"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/a3" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Đang giao"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/a4" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Đánh giá"
                            android:textSize="15dp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="History"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_xam"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Tài khoản của tôi "
                    android:textSize="20dp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_thanhtoan"
                        android:layout_width="370dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_xam"
                        android:gravity="center"
                        android:text="Tùy chọn thanh toán"
                        android:textSize="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scrollbarStyle="insideOverlay" />


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/background_xam"
                    android:layout_width="370dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thành viên"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:text="Bạn cần tích lũy thêm 100đ để đạt thành viên Đồng"
                            android:textSize="12dp"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#F5F5F5"
                        android:text=">"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="right" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_xam"
                    android:layout_width="370dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vi"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ví điểm"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"/>
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#F5F5F5"
                        android:text="0điểm >"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="right" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_xam"
                    android:layout_width="370dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/adduser"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã giới thiệu"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"/>
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#F5F5F5"
                        android:text="01234567 >"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="right" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_xam"
                    android:layout_width="370dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/voucher"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voucher của tôi"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"/>
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#F5F5F5"
                        android:text=">"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="right" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_xam"
                    android:layout_width="370dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/address"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ của tôi"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"/>
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#F5F5F5"
                        android:text=">"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="right" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_xam"
                    android:layout_width="370dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/facebook"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fanpage"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"/>
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#F5F5F5"
                        android:text=">"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="right" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_xam"
                    android:layout_width="370dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_logOut"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#F5F5F5"
                        android:text="Đăng xuất"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>